<%= simple_form_for(@event, html: {}) do |f| %>
    <%= f.input :type, wrapper_html: { class: "form-group" }, label_html: {class: "col-2 col-form-label"}, input_html: {class: "form-control", value: @event.type} %>
    <%= f.input :name, wrapper_html: { class: "form-group" }, label_html: {class: "col-2 col-form-label"}, input_html: {class: "form-control", value: @event.name} %>
    <%= f.input :private_event, wrapper_html: { class: "form-check form-check-inline" }, label_html: {}, input_html: {class: "form-control", value: @event.private_event} %>
    <%= f.input :description, wrapper_html: { class: "form-group" }, label_html: {class: "col-2 col-form-label"}, input_html: {class: "form-control", value: @event.description} %>
    <%= f.input :date, as: :date, html5: true, wrapper_html: { class: "form-group" }, label_html: {class: "col-2 col-form-label"}, input_html: {class: "form-control", value: @event.date} %>
<% end %>