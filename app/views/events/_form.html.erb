<h1>Events#form</h1>
<p>Find me in app/views/events/form.html.erb</p>
<%= simple_form_for(@event, html: {}) do |f| %>
    <%= f.input :type, wrapper_html: { class: "form-group" }, label_html: {class: "col-2 col-form-label"}, input_html: {class: "form-control"} %>
    <%= f.input :name, wrapper_html: { class: "form-group" }, label_html: {class: "col-2 col-form-label"}, input_html: {class: "form-control"} %>
    <%= f.input :private_event, wrapper_html: { class: "form-check form-check-inline" }, label_html: {}, input_html: {class: "form-control"} %>
    <%= f.input :description, wrapper_html: { class: "form-group" }, label_html: {class: "col-2 col-form-label"}, input_html: {class: "form-control"} %>
    <%= f.input :date, as: :date, html5: true, wrapper_html: { class: "form-group" }, label_html: {class: "col-2 col-form-label"}, input_html: {class: "form-control"} %>
<% end %>