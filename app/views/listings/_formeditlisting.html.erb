<%= simple_form_for @listing do |f| %>
    <%= f.input :title, required:true, input_html: { value: @listing.title } %>
    <%= f.input :address, required:true, input_html: { class: "address" } %>
    <%= f.input :category, input_html: { value: @listing.category } %>
    <%= f.input :acc_cash, input_html: { value: @listing.acc_cash } %>
    <%= f.input :acc_trade, input_html: { value: @listing.acc_trade } %>
    <%= f.input :description, input_html: { value: @listing.description } %>
    <%= f.input :wants, input_html: { value: @listing.wants} %>
    <%= f.input :quantity, value: @listing.quantity} %>
    <%= f.input :harvest_date, as: :date, html5: true, input_html: { value: @listing.harvest_date } %>
    <%= f.input :exp_date, as: :date, html5: true, input_html: { value: @listing.exp_date } %>
    <%= f.input :picture, as: :file %>
    <%= f.button :submit, class: "btn btn-primary" %>
<% end %>