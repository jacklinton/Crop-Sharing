<h1>Items#_form</h1>
<p>Find me in app/views/items/_form.html.erb</p>
<%= simple_form_for(@item, remote: true, html: { id: "new_item" }) do |f| %>
    <%= f.input :name, wrapper_html: { class: "form-group" }, label_html: {}, input_html: { class: "form-control" } %>
    <%= f.input :description, wrapper_html: { class: "form-group" }, label_html: {}, input_html: { class: "form-control" } %>
    <%= f.button :submit, wrapper_html: { class: "btn btn-primary"} %>
<% end %>